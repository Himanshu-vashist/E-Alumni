<% layout("/layouts/boilerplate.ejs") %>
<style>
    .container {
        background: linear-gradient(to right, #d3d2f6, #6d9cee);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(191, 131, 131, 0.2);
        max-width: 600px;
        width: 100%;
        margin-top: 25px; /* Added top margin */
        margin-bottom: 25px;
    }
    h2 {
        margin-top: 0;
        color: #333;
        font-size: 24px; /* Increased font size for the header */
        text-align: center; /* Centered the header */
        margin-bottom: 20px; /* Added space below the header */
    }
    label {
        display: block;
        margin-bottom: 10px; /* Increased bottom margin for labels */
        color: #555;
        font-size: 16px; /* Slightly larger font size for labels */
    }
    input[type="text"],
    textarea,
    select {
        width: 100%;
        padding: 12px; /* Increased padding */
        margin-bottom: 20px; /* Increased space between fields */
        border: 1px solid #ddd;
        border-radius: 6px; /* Increased border radius */
        box-sizing: border-box;
        font-size: 16px;
        font-family: Arial, sans-serif; /* Consistent font family */
    }
    button {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 12px 24px; /* Increased padding */
        border-radius: 6px; /* Increased border radius */
        font-size: 18px; /* Larger font size for button text */
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease; /* Added transition for scale effect */
    }
    button:hover {
        background-color: #0056b3;
        transform: scale(1.05); /* Slightly enlarges button on hover */
    }
    .btnSub{
        background-color: black;
    }
</style>
<body>
    <div class="container ">
        <h2>Create a New Post <i class="fa-solid fa-camera"></i></h2>
        <form action="/posts/new" method="POST">
            <div>
                <label for="title" class="formControl">Title:</label>
                <input type="text" id="title" name="title" required>
            </div>
            <div>
                <label for="content">Content:</label>
                <textarea id="content" name="content" rows="5" required></textarea>
            </div>
            <div>
                <label for="type">Type of Post:</label>
                <select id="type" name="type" required>
                    <option value="">Select a type</option>
                    <option value="news">News & Events</option>
                    <option value="blog">job opening</option>
                    <option value="announcement">Announcement</option>
                    <option value="event">success-story</option>
                </select>
            </div>
            <button type="submit" class="btnSub">Submit</button>
        </form>
    </div>
</body>
