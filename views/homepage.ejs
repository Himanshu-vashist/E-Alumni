<%- layout("/layouts/boilerplate.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Alumni Community</title>
    <style>
        body {
          margin-top: 2rem;
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            pa
        }

        /* Hero Section */
        .hero-section {
           margin-top: 2rem;
           margin-left:2rem;
           margin-right: 2rem;
           background-color: rgb(68,19,238); /* Gradient background */
            color: #fff;
            padding: 100px 20px;
            text-align: center;
           

        }

        .hero-section h1 {
            
            font-size: 3.5em;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .hero-section p {
            font-size: 1.5em;
            margin-bottom: 40px;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 15px 30px;
            font-size: 1.2em;
            text-decoration: none;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            min-width: 200px;
            text-align: center;
        }

        .btn-register {
            background-color: #28a745;
            box-shadow: 5px 5px 10px rgb(57, 56, 56);
        }

        .btn-register:hover {
            background-color: #218838;
            box-shadow: 5px 5px 10px gray;
        }

        .btn-login {
            background-color: #ffc107;
            box-shadow: 5px 5px 10px rgb(57, 56, 56);
            color: #343a40;
        }

        .btn-login:hover {
            background-color: #e0a800;
            box-shadow: 5px 5px 10px gray;
        }

        /* Content Sections */
        .content-section, .content-section1, .posts-section {
            padding: 50px 20px;
            text-align: center;
        }

        .content-section h2,
        .content-section1 h2,
        .posts-section h2 {
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #343a40;
        }

        .content-section p,
        .content-section1 p {
            font-size: 1.2em;
            margin-bottom: 40px;
            color: #6c757d;
        }

        /* Grid Container for News and Events */
        .grid-container {
            display: flex;
            
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            padding: 20px 0;
            gap: 20px;
        }

        .card {
            flex: 0 0 auto;
            scroll-snap-align: start;
            background-color: #fff;
            padding: 20px;
            margin: 0 10px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            width: 300px;
            height: 250px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card h3 {
            margin-top: 0;
            color: #343a40;
        }

        .card p {
            color: #6c757d;
            flex-grow: 1;
        }

        /* Latest Alumni Posts Section */
        .posts-section {
            background: #f7f7f7;
            overflow-x: auto;
            white-space: nowrap;
            box-shadow: 0 -2px 18px rgba(0, 0, 0, 0.26);
            padding-bottom: 20px;
        }

        .post {
            display: inline-block;
            vertical-align: top;
            width: 100%;
            
            margin-right: 1rem;
            background-color: #fff;
            border-radius: 8px;
            padding: 1rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            scroll-snap-align: start;
        }

        .post h4 {
            margin: 0 0 10px 0;
            font-size: 1.3rem;
            color: #343a40;
        }

        .post p {
            margin: 0;
            color: #555;
        }

        .view-more {
            display: inline-block;
            text-align: center;
            padding: 1rem;
            background: #037af8;
            color: rgb(255, 255, 255);
            cursor: pointer;
            border-radius: 8px;
            height: 80%;
            min-width: 250px;
            flex: 0 0 auto;
            margin-top: 1rem;
            box-shadow: 5px 5px 10px gray;
        }

       

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .hero-section h1 {
                font-size: 2.5em;
            }

            .hero-section p {
                font-size: 1.2em;
            }

            .btn-action {
                font-size: 1em;
                padding: 10px 20px;
                min-width: 150px;
            }

            .card, .post, .view-more {
                width: 250px;
                height: auto;
            }

            .stats-grid {
                gap: 30px;
            }

            .stat-item {
                font-size: 2em;
            }
        }
        .img_alm{
            width: 300px;
            margin-top: 40px;
        }
       


    </style>
</head>
