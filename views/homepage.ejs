<%- layout("/layouts/boilerplate.ejs") %>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    .hero-section {
        background: linear-gradient(135deg, #007bff, #6f42c1); /* Gradient background */
        color: #fff;
        padding: 100px 20px;
        text-align: center;
        margin-top: 5%;
    }

    .hero-section h1 {
        font-size: 3.5em;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .hero-section p {
        font-size: 1.5em;
        margin-bottom: 40px;
    }

    .btn-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 15px 30px;
        font-size: 1.2em;
        text-decoration: none;
        color: #fff;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        min-width: 200px;
        text-align: center;
    }

    .btn-register {
        background-color: #28a745;
    }

    .btn-register:hover {
        background-color: #218838;
    }

    .btn-login {
        background-color: #ffc107;
        color: #343a40;
    }

    .btn-login:hover {
        background-color: #e0a800;
    }

    .content-section {
        padding: 50px 20px;
        text-align: center;
    }

    .content-section h2 {
        font-size: 2.5em;
        margin-bottom: 20px;
        color: #343a40;
    }

    .content-section p {
        font-size: 1.2em;
        margin-bottom: 40px;
        color: #6c757d;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        text-align: left;
        padding: 20px;
    }

    .card h3 {
        font-size: 1.5em;
        margin-bottom: 10px;
        color: #343a40;
    }

    .card p {
        font-size: 1em;
        color: #6c757d;
    }

    .stats-container {
        background-color: #343a40;
        color: #fff;
        padding: 50px 20px;
        text-align: center;
    }

    .stats-container h2 {
        font-size: 2.5em;
        margin-bottom: 20px;
    }

    .stats-grid {
        display: flex;
        justify-content: center;
        gap: 50px;
    }

    .stat-item {
        font-size: 2em;
        color: #ffc107;
    }

    .stat-item p {
        margin-top: 10px;
        font-size: 1.2em;
        color: #fff;
    }

    .posts-section {
        position: relative;
        bottom: 0;
        left: 40px; /* Adjust based on your menu width */
        height: 20%; /* Height for the horizontal scroll area */
        width: calc(100% - 100px); /* Full width minus the menu width */
        background: #f7f7f7;
        overflow-x: auto; /* Horizontal scrolling */
        overflow-y: hidden; /* Disable vertical scroll */
        white-space: nowrap; /* Ensure all posts are in one line */
        padding: 1rem;
        box-shadow: 0 -2px 18px rgba(0, 0, 0, 0.26);
    }


    /* Style for Individual Post */
    .post {
        display: inline-block; /* Ensures posts are inline */
        vertical-align: top; /* Align posts to top */
        width: 300px; /* Width of each post */
        height: 100%; /* Ensures consistent height */
        margin-right: 1rem;
        background-color: #fff;
        border-radius: 8px;
        padding: 1rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .post h4 {
        margin: 0;
        font-size: 1.1rem;
        color: #333;
    }

    .post p {
        margin: 0.5rem 0 0;
        color: #555;
    }

    /* "View More" Button */
    .view-more {
        display: inline-block;
        text-align: center;
        padding: 1rem;
        background: #267fdd;
        color: white;
        cursor: pointer;
        border-radius: 8px;
        height: 100%;
    }
</style>

<body>
    <div class="hero-section">
        <h1>Welcome to E-Alumni Community</h1>
