<%- layout("/layouts/boilerplate.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat System</title>
    <link rel="stylesheet" href="styles.css"> <!-- Link to external CSS -->
    <style>
      /* Global Styles 
body {
    font-family: 'Arial', sans-serif;
    background-color: #f0f2f5;
    margin: 0;
    padding: 20px;
}
    */

/* Heading */
h1 {
    text-align: center;
    color: #4A4A4A;
    margin-bottom: 20px;
    font-size: 2.5rem;
    font-weight: 700;
}

/* Chat Container */
.chat-container {
    display: flex;              /* Flexbox layout for horizontal alignment */
    flex-direction: row;        /* Align items in a row */
    flex-wrap: nowrap;          /* Prevent wrapping */
    gap: 10px;                  /* Space between chat cards */
    overflow-x: auto;           /* Enable horizontal scrolling */
    padding: 10px;
    justify-content: flex-start;
    align-items: stretch;
}

/* Chat Card Styles */
.card {
    flex-shrink: 0;             /* Prevent chat cards from shrinking */
    background-color: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    overflow: hidden;
    width: 300px;               /* Set a fixed width for the chat card */
    transition: transform 0.3s ease;
}

.card:hover {
    transform: scale(1.02);     /* Slight hover effect */
}

/* Image Section */
.card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
}

/* Card Body */
.card-body {
    padding: 10px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

/* Card Title */
.card-title {
    font-size: 1.2rem;
    margin-bottom: 10px;
    color: #007BFF;
}

.card-title b {
    color: #333;
}

/* Message Text */
.card-text h3 {
    font-size: 1.1rem;
    margin: 10px 0;
    color: #555;
}

/* Received By Text */
.card-text small {
    color: #999;
}

/* Buttons */
button {
    padding: 7px 10px;
    border: none;
    border-radius: 5px;
    background-color: #007BFF;
    color: white;
    font-size: 0.9rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-right: 5px;
}

button:hover {
    background-color: #0056b3;
}

/* Form Styles */
form {
    display: inline-block;
}

    </style>
</head>
<body>
    <h1>All Posts!..</h1>
    
    <div class="chat-container"> <!-- Chat container for flex layout -->
        <% for(let chat of chats){ %>
        <div class="card">
          <!-- <img src="https://imgs.search.brave.com/gV6Xy99WsNTWpgT2KUNxopKhP45u8QMrrL2DGi5HYxg/rs:fit:500:0:0/g:ce/aHR0cHM6Ly90NC5m/dGNkbi5uZXQvanBn/LzAyLzE1Lzg0LzQz/LzM2MF9GXzIxNTg0/NDMyNV90dFg5WWlJ/SXllYVI3TmU2RWFM/TGpNQW15NEd2UEM2/OS5qcGc" alt="Chat Image">
         
          -->   <div class="card-body">
             <h5 class="card-title"><b>From: </b><i><%= chat.from %></i></h5>
             <p class="card-text">
                <h3><%= chat.message %></h3>
                <form method="get" action="/chats/<%= chat._id %>/edit">
                  <button>Edit</button> 
               </form>
             </p>
             <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                <button>Delete</button> 
             </form>
             <h5><b>Received By:</b> <i><%= chat.to %></i></h5>
             <p class="card-text"><small>Last updated 3 mins ago</small></p>
           </div>
         </div>
        <% } %>
    </div>
</body>
</html>
